<div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-0 p-4 pb-0">
                <h3 class="fw-bold mb-0">Đăng Nhập</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="formLogin">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email hoặc SĐT</label>
                        <input name="username" type="text" class="form-control form-control-lg" placeholder="Nhập email/SĐT">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mật Khẩu</label>
                        <div class="password-input">
                            <input name="password" type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu">
                            <i class="bi bi-eye password-toggle"></i>
                        </div>
                    </div>

                    <button class="btn btn-primary btn-lg w-100 mb-4">Đăng Nhập</button>
                </form>

                <div class="divider mb-4"><span>Hoặc tiếp tục với</span></div>
                <div class="row g-3 mb-4">
                    <div class="col-6"><button class="btn btn-outline-secondary w-100"><i class="bi bi-google me-2"></i>Google</button></div>
                    <div class="col-6"><button class="btn btn-outline-secondary w-100"><i class="bi bi-facebook me-2"></i>Facebook</button></div>
                </div>

                <div class="text-center">
                    <p class="mb-0 text-secondary">
                        Chưa có tài khoản?
                        <a href="@Url.Action("Index", "Register")"
                           class="text-primary fw-bold text-decoration-none">
                            Đăng ký ngay
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

