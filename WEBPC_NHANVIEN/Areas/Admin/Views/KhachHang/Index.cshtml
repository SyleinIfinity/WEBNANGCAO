@model IEnumerable<WEBPC_NHANVIEN.Areas.Admin.Models.KhachHangViewModel>
@{
    ViewBag.Title = "Quản Lý Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card" style="display: flex; justify-content: space-between;">
    <input type="text" placeholder="Tìm khách hàng (SĐT, Email)..." class="form-control" style="width: 300px;">
    <button class="btn btn-primary">+ Thêm Khách Hàng</button>
</div>

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>Họ Tên</th>
                <th>Email</th>
                <th>Số Điện Thoại</th>
                <th>Trạng Thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td>@item.SoDienThoai</td>
                        <td>
                            @if (item.TrangThai == "Active")
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Khóa</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-danger btn-sm"><i class="fas fa-lock"></i></button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>