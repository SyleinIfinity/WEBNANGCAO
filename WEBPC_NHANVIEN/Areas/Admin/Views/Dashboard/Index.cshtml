@{
    ViewBag.Title = "Tổng Quan Hệ Thống";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="stats-grid" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 20px;">
    <div class="card" style="border-left: 5px solid var(--primary-color);">
        <p style="color:var(--text-muted); margin-bottom:5px;">Doanh Thu</p>
        <h3 style="font-size: 1.8rem; color: var(--primary-color);">1.2 Tỷ</h3>
    </div>
    <div class="card" style="border-left: 5px solid var(--success);">
        <p style="color:var(--text-muted); margin-bottom:5px;">Đơn Hàng Mới</p>
        <h3 style="font-size: 1.8rem; color: var(--success);">24</h3>
    </div>
    <div class="card" style="border-left: 5px solid var(--warning);">
        <p style="color:var(--text-muted); margin-bottom:5px;">Khách Hàng</p>
        <h3 style="font-size: 1.8rem; color: var(--warning);">1,205</h3>
    </div>
    <div class="card" style="border-left: 5px solid var(--danger);">
        <p style="color:var(--text-muted); margin-bottom:5px;">Tồn Kho Thấp</p>
        <h3 style="font-size: 1.8rem; color: var(--danger);">85</h3>
    </div>
</div>

<div class="card">
    <h4>Đơn Hàng Mới Nhất</h4>
    <table>
        <thead>
            <tr><th>Mã Đơn</th><th>Khách Hàng</th><th>Tổng Tiền</th><th>Trạng Thái</th></tr>
        </thead>
        <tbody>
            <tr>
                <td>#HD8821</td>
                <td>Trần Văn An</td>
                <td>15.500.000 đ</td>
                <td><span style="background: #d1fae5; color: #065f46; padding: 5px 10px; border-radius: 20px; font-size: 0.8rem;">Hoàn thành</span></td>
            </tr>
        </tbody>
    </table>
</div>